# üöÄ PRODUCTION ENVIRONMENT TEMPLATE
# Copy this file to .env on your production server and update the values

# Application Settings
APP_NAME="Palets"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Database Configuration (Production)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=palets_production
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password

# Cache & Session (Use Redis for better performance)
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=public
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Production SMTP)
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-server.com
MAIL_PORT=587
MAIL_USERNAME=your-email@yourdomain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Stripe Configuration (LIVE CREDENTIALS)
# ‚ö†Ô∏è IMPORTANT: Use LIVE keys for production, not test keys
STRIPE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY_HERE
STRIPE_SECRET=sk_live_YOUR_LIVE_SECRET_KEY_HERE
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY_HERE

# PayPal Configuration (LIVE CREDENTIALS)
# ‚ö†Ô∏è IMPORTANT: Set PAYPAL_MODE=live for production
PAYPAL_CLIENT_ID=YOUR_LIVE_PAYPAL_CLIENT_ID_HERE
PAYPAL_CLIENT_SECRET=YOUR_LIVE_PAYPAL_CLIENT_SECRET_HERE
PAYPAL_MODE=live
VITE_PAYPAL_CLIENT_ID=YOUR_LIVE_PAYPAL_CLIENT_ID_HERE

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Security Settings
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com
SESSION_DOMAIN=.yourdomain.com

# File Storage
FILESYSTEM_DISK=public

# Additional Production Settings
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# ===============================================
# üîß SETUP INSTRUCTIONS:
# ===============================================
# 
# 1. Copy this file to .env on your production server
# 2. Update all placeholder values with your actual credentials
# 3. Generate a new APP_KEY: php artisan key:generate
# 4. Update your domain name in APP_URL and SANCTUM_STATEFUL_DOMAINS
# 5. Set up your production database credentials
# 6. Configure your SMTP email settings
# 7. Add your LIVE Stripe credentials (pk_live_... and sk_live_...)
# 8. Add your LIVE PayPal credentials and set PAYPAL_MODE=live
# 9. Run: php artisan config:cache
# 10. Run: php artisan migrate --force
# 11. Run: php artisan db:seed --class=AdminSeeder
# 12. Run: php artisan db:seed --class=SettingsSeeder
# 
# ===============================================
# üö® SECURITY REMINDERS:
# ===============================================
# 
# - NEVER commit this .env file to Git
# - Use strong, unique passwords
# - Enable HTTPS (SSL certificate)
# - Set APP_DEBUG=false in production
# - Use production database with proper backups
# - Monitor your application logs regularly
# - Keep your server and dependencies updated
# 
# ===============================================
